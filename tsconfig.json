{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "noLib": false,
    "types": [
      "mocha",
      "reflect-metadata"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "generated"
  ]
}
